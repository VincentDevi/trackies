datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Entreprise {
  id        String     @id @default(cuid())
  name      String
  userId    String
  status    StatusEnum
  logo      String?
  message   Message[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
}

model Message {
  id           String      @id @default(cuid())
  entrepriseId String
  entreprise   Entreprise  @relation(fields: [entrepriseId], references: [id])
  userId       String
  screenSchot  String?
  type         MessageEnum
  createdAt    DateTime
  updatedAt    DateTime

  @@index([entrepriseId])
}

enum MessageEnum {
  FIRSTCONTACT
  EXCHANGE
  REJECTION
}

enum StatusEnum {
  OPEN
  CLOSED
}
